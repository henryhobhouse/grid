{
  "name": "eisenhower",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^9.22.2",
    "lodash": "^4.17.21",
    "nanoid": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.13.0",
    "react-scripts": "5.0.1",
    "styled-components": "^6.0.0-rc.3",
    "typescript": "5.1.3"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "start": "react-scripts start",
    "start:local": "yarn run firebase-server & yarn start",
    "build": "react-scripts build",
    "test": "yarn run firebase emulators:exec --only database 'react-scripts test'",
    "test:unit": "react-scripts test --testPathIgnorePatterns 'src/firebase/rules.test.tsx'",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "deploy": "yarn run firebase deploy",
    "deploy:rules": "yarn run firebase deploy --only database"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "CI=true yarn test:unit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --list-different"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/nanoid": "^3.0.0",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  }
}
